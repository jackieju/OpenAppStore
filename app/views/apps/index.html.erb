<h1>Listing apps</h1>

<table border=1>
  <tr>
    <th>Name</th>
    <th>Desc</th>
    <th>Author</th>
    <th>Regdate</th>
    <th>Installnum</th>
    <th>Callbackurl</th>
    <th>Type</th>
    <th>Logourl</th>
    <th>Language</th>
    <th>Category</th>
    <th>Tag</th>
    <th>Free</th>
    <th>Installcharge</th><th colspan=3>action</th>
  </tr>

<% @apps.each do |app| %>
  <tr>
    <td><%=h app.name %></td>
    <td><%=h app.desc %></td>
    <td><%=h app.author %></td>
    <td><%=h app.regdate %></td>
    <td><%=h app.installnum %></td>
    <td><%=h app.callbackurl %></td>
    <td><%=h app.type %></td>
    <td><%=h app.logourl %></td>
    <td><%=h app.language %></td>
    <td><%=h app.category %></td>
    <td><%=h app.tag %></td>
    <td><%=h app.free %></td>
    <td><%=h app.installcharge %></td>
    <td><%= link_to 'Show', app %></td>
    <td><%= link_to 'Edit', edit_app_path(app) %></td>
    <td><%= link_to 'Destroy', app, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New app', new_app_path %>